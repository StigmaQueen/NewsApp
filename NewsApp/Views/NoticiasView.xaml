             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.Views.NoticiasView"
             xmlns:vm="clr-namespace:NewsApp.dto"
             Title="NoticiasView" BackgroundColor="#242526" BackgroundImageSource="espacio.jpg">

    <Grid RowDefinitions=".08*,*">
        <!--<Grid MinimumHeightRequest="30" MaximumHeightRequest="30" ColumnDefinitions=".23*,*,.23*" >
            <Frame  BackgroundColor="White" CornerRadius="30" Margin="0">
                <Image WidthRequest="20" HeightRequest="20" Source="cohete.png" ></Image>
            </Frame>
            <Label TextColor="White" Grid.Column="1">News app</Label>
            <Frame Padding="20" Grid.Column="2"  BackgroundColor="White" CornerRadius="30" Margin="0">
                 <Image HeightRequest="20" WidthRequest="20"  Source="cohete.png">
                
