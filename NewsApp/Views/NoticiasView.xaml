        <Grid
            BackgroundColor="#000"
            ColumnDefinitions="*,.2*"
            RowDefinitions="*,1"
            MinimumHeightRequest="30"
            MaximumHeightRequest="50"
            >

            <Label
                Text="NEWS APP"
                TextColor="#FFF"
                FontSize="Title"
                Margin="10,0,0,0"
                VerticalOptions="Center"/>

            <Button
                
                Grid.Column="1"
                BackgroundColor="Transparent"
                ImageSource="logout.png"
                ToolTipProperties.Text="Cerrar"
                />
            <BoxView Grid.ColumnSpan="2" Color="#03DAC6" HeightRequest="1" Grid.Row="1"></BoxView>
        </Grid>
        <CollectionView Grid.Row="1" x:Name="listaNoticias">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:Test">
                    <Frame BackgroundColor="Transparent" BorderColor="#03DAC6"  Margin="15" Padding="15">
                        <StackLayout Spacing="5">
                            <Image Source="{Binding ImgSource}"></Image>
                            <Label TextColor="White" Text="{Binding Titulo}"></Label>
                            <Grid ColumnSpacing="15" ColumnDefinitions=".23*,*" RowDefinitions="*,*">
                                <Frame Grid.RowSpan="2" BackgroundColor="White" CornerRadius="30" Margin="0">
                                     <Image WidthRequest="20" HeightRequest="20" Source="cohete.png" ></Image>
                                </Frame>
                               
                                <Label TextColor="White" Text="Lo que sea" Grid.Column="1"></Label>
                                <Label TextColor="White" Text="{Binding Fecha}" Grid.Column="1" Grid.Row="1"></Label>
                            </Grid>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </Grid>
    
</ContentPage>